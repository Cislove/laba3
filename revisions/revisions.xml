<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3
                              https://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>revisions</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <!-- JAR из ревизии HEAD~1 -->
        <fileSet>
            <directory>${project.build.directory}/revision1/target</directory>
            <!-- Зависит от того, как называется ваш jar (обычно artifactId-version.jar) -->
            <includes>
                <include>${project.artifactId}-${project.version}.jar</include>
            </includes>
            <outputDirectory>revision1</outputDirectory>
        </fileSet>
        <!-- JAR из ревизии HEAD~2 -->
        <fileSet>
            <directory>${project.build.directory}/revision2/target</directory>
            <includes>
                <include>${project.artifactId}-${project.version}.jar</include>
            </includes>
            <outputDirectory>revision2</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
